<odoo>

    <record id="loyalty_program_view_form" model="ir.ui.view">
      <field name="name">loyalty.program.form.inherit</field>
      <field name="model">loyalty.program</field>
      <field name="inherit_id" ref="loyalty.loyalty_program_view_form" />
      <field name="arch" type="xml">
          <xpath expr="//field[@name='date_from']/.." position="inside">
              <field
                    name="rule_order_domain"
                    groups="base.group_no_one"
                    widget="domain"
                    options="{'model': 'sale.order', 'in_dialog': true}"
                />
          </xpath>
      </field>
    </record>

</odoo>
